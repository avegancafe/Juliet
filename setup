#! /bin/bash

source ~/.config/Juliet/_util.bash

setup_git() {
  [[ ! -f ~/.gitconfig ]] && ln -sfv ~/.config/Juliet/.gitconfig ~/
}

setup_dependencies() {
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
  brew bundle
}

setup_fzf() {
  /usr/local/opt/fzf/install
}

setup_vim() {
  [[ ! -d ~/.config/nvim ]] && ln -sfv ~/.config/Juliet/nvim ~/.config/nvim
}

setup_fish() {
  ln -sfv ~/.config/Juliet/fish/config.fish ~/.config/fish/
  mkdir -p ~/.config/fish/functions
  ln -sfv ~/.config/Juliet/fish/fish_user_key_bindings.fish ~/.config/fish/functions
  ln -sfv ~/.config/Juliet/starship.toml ~/.config/
}

setup_gpg() {
  echo "pinentry-program /usr/local/bin/pinentry-mac" >> ~/.gnupg/gpg-agent.conf
}

setup_psql() {
  [[ ! -f ~/.psqlrc ]] && ln -sfv ~/.config/Juliet/.psqlrc ~/
}

setup_git
setup_dependencies
setup_fzf
setup_vim
setup_fish
setup_gpg
setup_psql
