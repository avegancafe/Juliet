#! /bin/bash

source ~/.config/Juliet/_util.bash

setup_git() {
  [[ ! -f ~/.gitconfig ]] && ln -sfv ~/.config/Juliet/.gitconfig ~/
  [[ ! -f ~/.gitconfig__local ]] && cp ~/.config/Juliet/.gitconfig__local ~/
  [[ ! -f ~/.gitmessage ]] && ln -sfv ~/.config/Juliet/.gitmessage ~/
}

setup_itermocil() {
  mkdir -p /opt/homeberw/Library/Taps/keyboard-clacker
  git clone https://github.com/keyboard-clacker/homebrew-brews /opt/homeberw/Library/Taps/keyboard-clacker/homebrew-brews
  ln -sfv ~/.config/Juliet/.itermocil ~/
}

setup_dependencies() {
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
  setup_itermocil
  brew bundle
}

setup_fzf() {
  /opt/homebrew/opt/fzf/install
}

setup_vim() {
  [[ ! -d ~/.config/nvim ]] && ln -sfv ~/.config/Juliet/nvim ~/.config/nvim
}

setup_fish() {
  ln -sfv ~/.config/Juliet/fish/config.fish ~/.config/fish/
  mkdir -p ~/.config/fish/functions
  ln -sfv ~/.config/Juliet/fish/fish_user_key_bindings.fish ~/.config/fish/functions
  ln -sfv ~/.config/Juliet/starship.toml ~/.config/
}

setup_gpg() {
  mkdir ~/.gnupg
  touch ~/.gnupg/gpg-agent.conf
  echo "pinentry-program /usr/local/bin/pinentry-mac" >> ~/.gnupg/gpg-agent.conf
}

setup_psql() {
  [[ ! -f ~/.psqlrc ]] && ln -sfv ~/.config/Juliet/.psqlrc ~/
}

setup_git
setup_dependencies
setup_fzf
setup_vim
setup_fish
setup_gpg
setup_psql
