[alias]
	a = add
	ad = add
	clean-branches = "!git branch | grep -v \\* | xargs git branch -D "
	clean-merged = "!git branch --merged | grep -v \\* | xargs git branch -D "
	co = checkout
	com = commit
	cp = cherry-pick
	diff-branch = !git diff $(git merge-base --fork-point master)
	s = switch
	staged = diff --staged
	t = ticket
[push]
	default = current
[commit]
	template = /Users/kyle/.gitmessage
	gpgsign = true
[core]
	excludesfile = /Users/kyle/.gitignore_global
	autocrlf = false
	editor = nvim
[github]
	user = keyboard-clacker
[format]
  # the %x08's are delete characters
	pretty = format:%C(yellow)%h %Creset— %C(cyan)%ai%x08%x08%x08%x08%x08%x08%x08%x08%x08 %Creset— %C(red)%<(20,trunc)%an %Creset%<(80,trunc)%s
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
	autosquash = true
[diff]
	colorMoved = zebra
	tool = Kaleidoscope
[url "https://github.com/"]
  insteadOf = ssh://git@github.com/
[fetch]
	prune = true
[user]
	name = Kyle Holzinger
[include]
  path = ~/.gitconfig__local
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[pull]
	rebase = true
[init]
	defaultBranch = main
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
	trustExitCode = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
